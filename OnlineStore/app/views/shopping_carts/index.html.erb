<p id="notice"><%= notice %></p>

<h1>Shopping Cart</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_carts.each do |shopping_cart| %>
      <% if shopping_cart.user == current_user %>
        <tr>
          <td><%= shopping_cart.user.email %></td>
          <td><%= link_to 'Buy', "/" %></td>
          <td><%= link_to 'Show', shopping_cart %></td>
          <td><%= link_to 'Remove', shopping_cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cards', cards_path %>
<%= link_to 'Back to main page', "/" %>
