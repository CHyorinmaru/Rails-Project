<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.desc %></td>
        <td><%= card.price %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Add to cart',"/add_to_cart/" + card.id.to_s %></td>
        <% if current_user.admin? && current_user == card.user %>
          <td><%= link_to 'Edit', edit_card_path(card) %></td>
          <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
<%= link_to 'New Card', new_card_path %>
<%end%>

<p><%= link_to 'Back to the main page', "/" %></p>